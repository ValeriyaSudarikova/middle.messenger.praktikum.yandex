<div class="settings">
    <div class="settings__header">
        <div class="settings__header-avatar">
            <img src="../img/user1.png" alt="аватар пользователя">
            <div class="settings__header-avatar input__wrapper fz-25">
                <label for="input__file">
                    <span class="input__file--title">Изменить аватар</span>
                </label>
                <span class="input__wrapper-add fz-15"> выберете файл </span>
                <input type="file" name="avatar" class="input__wrapper-add file" />
            </div>
            <div class="input__header-container">
                {{>components/settingsInput label="имя" name="first_name" placeholder="введите имя" value="Валерия"}}
                {{>components/settingsInput label="фамилия" name="second_name" placeholder="введите фамилию" value=""}}
            </div>
        </div>
    </div>
    <form class="settings__inputs">
        {{>components/settingsInput type="text" subtitle="логин, по которому вас можно будет найти в поиске" label="имя пользователя" name="login" placeholder="введите имя пользователя" value=""}}
        {{>components/settingsInput type="email" subtitle="адрес эл. почты введенный при регистрации" label="адрес эл. почты" name="email" placeholder="адрес эл. почты" value=""}}
        {{>components/settingsInput type="text" subtitle="имя для показа в чате" label="имя пользователя" name="display_name" placeholder="введите имя" value=""}}
        {{>components/settingsInput type="phone" subtitle="" label="номер телефона" name="phone" placeholder="" value=""}}
        {{>components/settingsInput type="password" subtitle="Введите старый пароль" label="старый пароль" name="password_old" placeholder="" value="password"}}
        {{>components/settingsInput type="password" subtitle="Введите новый пароль, рекомендуется использовать буквы и символы для надежности" label="новый пароль" name="password_new" placeholder="введите пароль" value=""}}
        {{>components/settingsInput type="password" subtitle="" label="повторите пароль" name="password" placeholder="повторите пароль" value=""}}
        <div class="settings__inputs-submit">
            {{>components/btnSubmit type="reset" class="input__reset fz-20" label="отменить"}}
            {{>components/btnSubmit type="submit" class="input__submit fz-20" label="cохранить"}}
        </div>
    </form>
</div>
